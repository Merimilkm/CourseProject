<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <property name="pattern_file">
        %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{5} [%M] -- %msg%n
        </property>
        <property name="pattern_console">
            %d{HH:mm:ss.SSS} [%t] %-5level %logger{5} -- %msg%n
        </property>
    </Properties>
    <Appenders>
        <File name="TxtFile" fileName="D:\УЧ\course\EpamTasks\webfinal\logs/text.log" bufferedIO="true">
            <PatternLayout pattern="${pattern_file}"/>
        </File>
        <Console name="Console">
            <PatternLayout pattern="${pattern_console}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="TxtFile" level="debug"/>
            <AppenderRef ref="Console" level="debug"/>
        </Root>
    </Loggers>
</Configuration>